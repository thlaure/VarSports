{% extends 'base.html.twig' %}

{% block title %} | Nos clubs{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="h3 mb-3 font-weight-normal">Nos clubs</h1>

    <div class="row justify-content-between p-3">
        {% include 'flash.html.twig' %}

        {% for club in clubs %}
            <div class="card col-md-3 mb-4 m-md-4">
                <img src="{{ asset("images/uploads/club/") ~ (club.logo ? club.id ~ '/' ~ club.logo : 'default_logo.webp') }}" class="card-img-top rounded-circle w-25 m-auto py-3" alt="Logo du club {{ club.name }}" loading="lazy">

                <div class="card-body">
                    <h5 class="card-title text-center">
                        <a href="{{ path('app_club_show', {'slug': club.slug}) }}" class="stretched-link text-decoration-none text-black">{{ club.name }}</a>
                    </h5>
                    <p class="card-text text-body-secondary text-center"><small>{{ club.postalCode }} {{ club.city }}</small></p>
                    <div class="text-center">
                        {% for discipline in club.disciplines %}
                            <span class="badge text-bg-secondary">{{ discipline.label }}</span>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {% include 'pagination.html.twig' with { current_page: current_page, nb_pages: nb_pages, path: 'app_club_list' } %}
</div>
{% endblock %}
