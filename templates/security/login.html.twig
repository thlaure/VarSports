{% extends 'base.html.twig' %}

{% block title %} | Connexion{% endblock %}

{% block body %}
    <div class="container my-5">
        <section class="row">
            <div class="col-md-6 m-auto">
                <h1 class="h3 mb-3 font-weight-normal" id="login-title">Connexion</h1>

                {% include 'partials/flash.html.twig' %}
                
                <form method="post" aria-labelledby="login-title">
                    <div class="mb-3">
                        <label for="username" class="form-label">E-mail</label>
                        <input 
                            type="email" 
                            value="{{ last_username }}" 
                            name="_username" 
                            id="username" 
                            class="form-control" 
                            autocomplete="email" 
                            required 
                            aria-required="true" 
                            aria-describedby="username-help" 
                            autofocus
                        >
                    </div>
                    
                    <div class="mb-3">
                        <label for="password" class="form-label">Mot de passe</label>
                        <input 
                            type="password" 
                            name="_password" 
                            id="password" 
                            class="form-control" 
                            autocomplete="current-password" 
                            required 
                            aria-required="true" 
                            aria-describedby="password-help"
                        >
                    </div>
                    
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <input type="checkbox" name="_remember_me" id="remember_me">
                            <label for="remember_me">Se souvenir de moi</label>
                        </div>
                    #}

                    <button class="btn btn-primary" type="submit" aria-label="Se connecter au compte">Se connecter</button>
                </form>

                <p class="mt-3">
                    <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>
                </p>
            </div>
        </section>
    </div>
{% endblock %}