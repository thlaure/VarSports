<div class="card my-0 mx-auto border rounded-0 overflow-hidden" role="article" aria-labelledby="article-{{ article.id }}-title">
    <div class="row g-0">
        <div class="col-md-4 order-md-2">
            <picture>
                <source srcset="{{ (asset('images/uploads/article/') ~ (article.image ? article.id ~ '/' ~ article.image : 'default_cover.webp')) | imagine_filter('cover_article_event_list_webp') }}" type="image/webp">
                <source srcset="{{ (asset('images/uploads/article/') ~ (article.image ? article.id ~ '/' ~ article.image : 'default_cover.webp')) | imagine_filter('cover_article_event_list_jpg') }}" type="image/jpeg">
                <img src="{{ asset('images/uploads/article/') ~ (article.image ? article.id ~ '/' ~ article.image : 'default_cover.webp') }}" alt="Couverture de l'article {{ article.title }}" class="img-fluid object-fit-cover w-100 article-cover-list" loading="lazy" width="390" height="140">
            </picture>
        </div>
        <div class="col-md-8 order-md-1">
            <div class="card-body">
                <h3 class="card-title h6" id="article-{{ article.id }}-title">{{ article.title }}</h3>
                <small class="card-text">{{ article.text|striptags|slice(0, 100)|raw|nl2br }}...
                {% if article.slug %}
                    <i>Lire + :</i> <a class="text-varsports stretched-link" href="{{ path('app_article_show', {'slug': article.slug}) }}">Lien</a>
                {% elseif article.externalLink %}
                    <i>Lire + :</i> <a class="text-varsports stretched-link" href="{{ article.externalLink }}">Lien</a>
                {% endif %}
                </small>
            </div>
        </div>
    </div>
</div>
