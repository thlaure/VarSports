<div class="card rounded-1 mb-4 m-sm-4 p-0" role="article" aria-labelledby="article-{{ article.id }}-title">
    <div class="position-relative">
        <picture>
            <source srcset="{{ (asset('images/uploads/article/') ~ (article.image ? article.id ~ '/' ~ article.image : 'default_cover.webp')) | imagine_filter('cover_article_event_list_webp') }}" type="image/webp">
            <source srcset="{{ (asset('images/uploads/article/') ~ (article.image ? article.id ~ '/' ~ article.image : 'default_cover.webp')) | imagine_filter('cover_article_event_list_jpg') }}" type="image/jpeg">
            <img src="{{ asset('images/uploads/article/') ~ (article.image ? article.id ~ '/' ~ article.image : 'default_cover.webp') }}" alt="Couverture de l'article {{ article.title }}" class="img-fluid object-fit-cover w-100 rounded-top-1 article-cover-list" loading="lazy" width="390" height="140">
        </picture>
    </div>

    <div class="card-body p-3 mt-3 mt-sm-5 mt-md-3">
        <h3 id="article-{{ article.id }}-title" class="h5 card-title">
            <a href="{{ article.externalLink }}" class="stretched-link text-decoration-none text-varsports">{{ article.title }}</a>
        </h3>
        <p class="card-text"><small class="text-body-secondary">{{ article.creationDate|date('d/m/Y') }}</small></p>
        <p class="text-start">
            {{ article.text|striptags|slice(0, 100) }}...
            {% if article.externalLink %}
                <br>Voir + <a class="text-varsports" href="{{ article.externalLink }}">{{ article.externalLink }}</a>
            {% endif %}
        </p>
    </div>
</div>
