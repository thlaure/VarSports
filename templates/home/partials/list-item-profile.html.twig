<div class="row">
    <div class="col-md-6 mb-3">
        <picture>
            <source srcset="{{ (asset('images/uploads/article/') ~ (article.image ? article.id ~ '/' ~ article.image : 'default_cover.webp'))  | imagine_filter('cover_article_event_show_webp') }}" type="image/webp">
            <source srcset="{{ (asset('images/uploads/article/') ~ (article.image ? article.id ~ '/' ~ article.image : 'default_cover.webp'))  | imagine_filter('cover_article_event_show_jpg') }}" type="image/jpeg">
            <img src="{{ asset('images/uploads/article/') ~ (article.image ? article.id ~ '/' ~ article.image : 'default_cover.webp') }}" alt="Couverture de l'article {{ article.title }}" class="img-fluid object-fit-cover w-100 article-cover" loading="lazy" width="500" height="500">
        </picture>
    </div>
    <div class="col-md-6">
        <h3 class="h4 text-varsports" id="article-{{ article.id }}-title">{{ article.title }}</h3>
        <div class="card-text mb-3">
            {{ article.text|raw|nl2br }}
        </div>
        {% if article.slug %}
            <a href="{{ path('app_article_show', {'slug': article.slug}) }}" class="btn btn-sm rounded-0 btn-varsports" aria-label="Lire l'article">Lire l'article</a>
        {% elseif article.externalLink %}
            <a href="{{ article.externalLink }}" class="btn btn-sm rounded-0 btn-varsports" aria-label="Lire l'article">Lire l'article</a>
        {% endif %}
    </div>
</div>
