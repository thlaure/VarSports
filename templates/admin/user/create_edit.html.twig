{% extends 'base.html.twig' %}

{% block robots %}
<meta name="robots" content="noindex, nofollow">
{% endblock %}

{% block title %} | Créer ou modifier un utilisateur{% endblock %}

{% block body %}
<div class="container my-5">
    <section>
        <h1 class="h3 mb-3 font-weight-normal">Créer ou modifier un utilisateur</h1>

        {% include 'partials/flash.html.twig' %}

        <div class="row">
            <div class="col-md-6 m-auto">
                {{ form_start(form) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.firstname) }}
                    {{ form_row(form.email, {'attr': {'autocomplete': 'email'}}) }}
                    {{ form_row(form.phone) }}
                    {{ form_row(form.roles) }}
                    {{ form_row(form.plainPassword) }}
                    {{ form_row(form.submit) }}
                {{ form_end(form) }}
            </div>
        </div>
    </section>
</div>
{% endblock %}
