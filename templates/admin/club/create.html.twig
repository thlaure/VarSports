{% extends 'base.html.twig' %}

{% block title %} | Admin - Créer un club{% endblock %}

{% block body %}
<div class="container">
    <section>
        <h1>Créer un club</h1>

        <div>
            {{ form_start(form) }}
                <div>
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div>
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div>
                    {{ form_label(form.phone) }}
                    {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div>
                    {{ form_label(form.website) }}
                    {{ form_widget(form.website, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div>
                    {{ form_label(form.address) }}
                    {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div>
                    {{ form_label(form.postalCode) }}
                    {{ form_widget(form.postalCode, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div>
                    {{ form_label(form.city) }}
                    {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div>
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div>
                    {{ form_label(form.disciplines) }}
                    {{ form_widget(form.disciplines, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div>
                    {{ form_label(form.logo) }}
                    {{ form_widget(form.logo, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div>
                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary mt-3'}}) }}
                </div>
            {{ form_end(form) }}
        </div>
    </section>
</div>
{% endblock %}
