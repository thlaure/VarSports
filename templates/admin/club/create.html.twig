{% extends 'base.html.twig' %}

{% block robots %}
<meta name="robots" content="noindex, nofollow">
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://cdn.ckeditor.com/ckeditor5/42.0.2/ckeditor5.css">
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script type="importmap">
    {
        "imports": {
            "ckeditor5": "https://cdn.ckeditor.com/ckeditor5/42.0.2/ckeditor5.js",
            "ckeditor5/": "https://cdn.ckeditor.com/ckeditor5/42.0.2/"
        }
    }
</script>

<script src="{{ asset('js/select2.js') }}" defer></script>
<script type="module" src="{{ asset('js/ckeditor-config.js') }}" defer></script>
{% endblock %}

{% block title %} | Admin - Créer un club{% endblock %}

{% block body %}
<div class="container my-5">
    <section>
        <h1 class="h3 mb-3 font-weight-normal">Créer un club</h1>

        {% include 'partials/flash.html.twig' %}

        {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.phone) }}
                        {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.phone) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.address) }}
                        {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.address) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.addressComplement) }}
                        {{ form_widget(form.addressComplement, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.addressComplement) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.cityPostalCode) }}
                        {{ form_widget(form.cityPostalCode, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.cityPostalCode) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.cityName) }}
                        {{ form_widget(form.cityName, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.cityName) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.description) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.disciplines) }}
                        {{ form_widget(form.disciplines, {'attr': {'class': 'form-control select2-autocomplete'}}) }}
                        {{ form_errors(form.disciplines) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.logo) }}
                        {{ form_widget(form.logo, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.logo) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.coverImage) }}
                        {{ form_widget(form.coverImage, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.coverImage) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.website) }}
                        {{ form_widget(form.website, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.website) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.instagram) }}
                        {{ form_widget(form.instagram, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.instagram) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.facebook) }}
                        {{ form_widget(form.facebook, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.facebook) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.youtube) }}
                        {{ form_widget(form.youtube, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.youtube) }}
                    </div>

                    {% if is_granted('ROLE_ADMIN') %}
                    <div class="mb-3">
                        {{ form_label(form.admin_email) }}
                        {{ form_widget(form.admin_email, {'attr': {
                            'class': 'form-control',
                            'required': true
                        }}) }}
                        {{ form_errors(form.admin_email) }}
                    </div>
                    {% endif %}
                </div>
            </div>

            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary mt-3 mx-auto'}}) }}
        {{ form_end(form) }}
    </section>
</div>
{% endblock %}
