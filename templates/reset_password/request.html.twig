{% extends 'base.html.twig' %}

{% block title %} | Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="container my-5">
    <section class="col-md-6 m-auto" aria-labelledby="reset-password-title">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h1 class="h3 mb-3 font-weight-normal" id="reset-password-title">Réinitialiser votre mot de passe</h1>

        {{ form_start(request_form) }}
            <div class="form-group">
                {{ form_label(request_form.email, 'Adresse e-mail', { 'label_attr': {'class': 'form-label'} }) }}
                {{ form_widget(request_form.email, { 'attr': {'class': 'form-control', 'aria-describedby': 'emailHelp'} }) }}
                <small id="emailHelp" class="form-text text-muted">Saisissez votre adresse électronique et nous vous enverrons un lien pour réinitialiser votre mot de passe.</small>
                {{ form_errors(request_form.email) }}
            </div>

            <button class="btn btn-primary mt-3" type="submit">Envoyer</button>
        {{ form_end(request_form) }}
    </section>
</div>
{% endblock %}
