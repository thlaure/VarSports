{% extends 'base.html.twig' %}

{% block title %} | Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="container my-5">
    <section class="col-md-6 m-auto" aria-labelledby="reset-password-title">
        <h1 class="h3 mb-3 font-weight-normal" id="reset-password-title">Réinitialiser votre mot de passe</h1>

        {{ form_start(resetForm) }}
            <div class="form-group">
                {{ form_label(resetForm.plainPassword, 'Nouveau mot de passe', { 'label_attr': {'class': 'form-label'} }) }}
                {{ form_widget(resetForm.plainPassword, { 'attr': {'class': 'form-control', 'aria-describedby': 'passwordHelp'} }) }}
                <small id="passwordHelp" class="form-text text-muted">Votre mot de passe doit contenir au moins 8 caractères.</small>
                {{ form_errors(resetForm.plainPassword) }}
            </div>

            <button class="btn btn-primary mt-3" type="submit">Envoyer</button>
        {{ form_end(resetForm) }}
    </section>
</div>
{% endblock %}