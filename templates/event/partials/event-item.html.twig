<div class="card rounded-1 col-10 col-sm-8 col-md-5 col-lg-3 mb-4 m-sm-4 p-0" role="region" aria-labelledby="event-{{ event.id }}-title">
    <div class="position-relative">
        <picture>
            <source srcset="{{ (asset('images/uploads/event/') ~ (event.image ? event.id ~ '/' ~ event.image : 'default_cover.webp')) | imagine_filter('cover_article_event_list_webp') }}" type="image/webp">
            <source srcset="{{ (asset('images/uploads/event/') ~ (event.image ? event.id ~ '/' ~ event.image : 'default_cover.webp')) | imagine_filter('cover_article_event_list_jpg') }}" type="image/jpeg">
            <img src="{{ asset('images/uploads/event/') ~ (event.image ? event.id ~ '/' ~ event.image : 'default_cover.webp') }}" alt="Couverture de l'événement {{ event.title }}" class="img-fluid object-fit-cover w-100 rounded-top-1 event-cover-list" loading="lazy" width="390" height="140">
        </picture>
    </div>

    <div class="card-body p-3 mt-3 mt-sm-5 mt-md-3">
        <h3 id="event-{{ event.id }}-title" class="h5 card-title">
            <a href="{{ path('app_event_show', {'slug': event.slug}) }}" class="stretched-link text-decoration-none text-black">{{ event.title }}</a>
        </h3>
        <p class="card-text"><small class="text-body-secondary">{{ event.startDate|date('d/m/Y à H:i') }} - {{ event.endDate|date('d/m/Y à H:i') }}</small></p>
        <p class="card-text">{{ event.text|striptags|slice(0, 100) }}...</p>
    </div>
</div>
